<h1>Profile Page</h1>

<b>Welcome back, <%= @user.email %></b>

<p>
  <% if @user.photo %>
    <%= image_tag(@user.photo.file.url(:thumb)) %>
  <% else %>
    <%= image_tag "silhouette.jpg" %>
  <% end %>
</p>

<h3>Your questions:</h3>
<% @questions.each do |question| %>
<%= question.q_title %><br/>
<%= question.q_content %><br/>
<%= link_to "Edit", edit_question_path(question) %>
<%= link_to "destroy", question_path(question), method: :delete,
    confirm: "Are you sure?" %><br><br>
<% end %>

<h3>Your answers</h3>
<% @answers.each do |answer| %>
<%= answer.a_content %><br/>
<%= link_to "Edit", edit_question_answer_path(answer.question_id, answer) %>
<%= link_to "destroy", question_answer_path(answer.question_id, answer), method: :delete,
    confirm: "Are you sure?" %><br><br>
<% end %>
