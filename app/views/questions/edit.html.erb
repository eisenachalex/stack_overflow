<h1 class="welcome">Edit your question</span></h1>

<container class="left" id="edit_question">

<%= form_for @question do |f| %>
  <%= f.label :q_title, "Title" %><br/>
  <%= f.text_field :q_title, placeholder: 'title' %><br>
  <%= f.label :q_content, "Question" %><br/>
  <%= f.text_area :q_content, placeholder: 'content', size: "60x12" %><br>
  <%= fields_for :tags do |tag_field| %>
      <%= tag_field.label :t_content, "Tags" %>
      <%= tag_field.text_field :t_content, placeholder: 'tags' %>
    <% end %><br><br>
  <%= f.submit %>
<% end %>

</container>
